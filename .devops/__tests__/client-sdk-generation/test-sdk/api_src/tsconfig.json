{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*"
  ]
}
