# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.md]
indent_style = space
indent_size = 2

[*.yaml,*.yml]
indent_style = space
indent_size = 2
